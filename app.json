{
  "expo": {
    "name": "bolt-expo-nativewind",
    "slug": "bolt-expo-nativewind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#1E40AF"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "plugins": ["expo-router", "expo-font", "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "This app uses the camera to scan barcodes and QR codes."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "This app uses the photo library to select images."
        }
      ],
      [
        "expo-location",
        {
          "locationPermission": "This app uses your location to provide location-based features."
        }
      ],
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
